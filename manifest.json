{
  "manifest_version": 3,
  "name": "Read and Scroll",
  "version": "0.1.0",
  "description": "A cross-browser extension that adds a reader mode and auto-scroll to any website.",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [
        "icon-128.png",
        "icon-48.png",
        "icon-32.png",
        "icon-16.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
