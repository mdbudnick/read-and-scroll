{
  "manifest_version": 3,
  "name": "Read and Scroll",
  "short_name": "ReadScroll",
  "version": "1.0.0",
  "description": "A cross-browser extension that adds a reader mode and auto-scroll to any website.",
  "icons": {
    "16": "rs-16.png",
    "32": "rs-32.png",
    "48": "rs-48.png",
    "128": "rs-128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "rs-16.png",
      "32": "rs-32.png",
      "48": "rs-48.png",
      "128": "rs-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [
        "rs-128.png",
        "rs-48.png",
        "rs-32.png",
        "rs-16.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
